      <section class="jumbotron text-center">
        <div class="container">
          <h1 class="jumbotron-heading">Liste des Events</h1>
          <p class="lead text-muted">Ici tu peux retrouver la list de tous les evenements et aussi cr√©er ton propre evenement</p>
          <p>
            <a href="<%= new_event_path%>" class="btn btn-sm btn-outline-primary">Creer ton propre event</a>
          </p>
        </div>
      </section>


<main role="main">
      <div class="album py-5 bg-light">
        <div class="container">
          <div class="row">
                  <% @event.each do |event| %>
            <div class="col-md-4">
            
              <div class="card mb-4 box-shadow">
                <p class="card-text"> <%= event.title %> </p>
                <div class="card-body">
                  <p class="card-text"> <%= event.description %></p>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                      <%= button_to "Voir", event_path(event.id), method: :get, class: 'btn btn-sm btn-primary'%>
                      <%= button_to "Editer", edit_event_path(event.id), method: :get, class: 'btn btn-sm btn-outline-success'%>
                    </div>
                    <small class="text-muted"><%= event.created_at %> </small>
                </div>
            </div>
        </div>
    </div>
     <% end %>
</main>
